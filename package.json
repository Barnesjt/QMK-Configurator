{
  "name": "qmk",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.thevankeyboards.qmk",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "server:dev": "nodemon server/index.js",
    "server:start": "NODE_ENV=production node server/index.js",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "preelectron:dist": "yarn build",
    "electron:dist": "electron-builder -mwl",
    "electron:pack": "electron-builder --dir",
    "docker:build": "docker build -t qmk .",
    "docker:run": "docker run -it --rm -p 8000:80 -e PORT=80 --name qmk qmk",
    "docker:clean": "docker rm $(docker ps -q -f 'status=exited') && docker rmi $(docker images -q -f 'dangling=true')"
  },
  "dependencies": {
    "@craco/craco": "^3.2.3",
    "chroma-js": "^2.0.2",
    "corser": "^2.0.1",
    "d3": "^5.7.0",
    "electron-is-dev": "^1.0.1",
    "express": "^4.16.4",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-beautiful-dnd": "^10.0.3",
    "react-color": "^2.14.1",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.1",
    "react-textfit": "^1.1.0",
    "rimraf": "^2.6.2",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^0.84.0",
    "shrink-ray": "^0.1.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^3.0.13",
    "electron-builder": "^20.38.4",
    "nodemon": "^1.18.9",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
