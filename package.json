{
  "name": "qmk-configurator",
  "version": "0.1.0-beta",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "The Van Keyboards",
  "description": "Configurator for the QMK keyboard firmware",
  "repository": {
    "type": "git",
    "url": "https://github.com/evangs/configurator.git"
  },
  "build": {
    "appId": "com.thevankeyboards.qmk",
    "productName": "QMK Configurator",
    "files": [
      "server/src/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "identity": null,
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.utility",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "appImage": {
      "license": "assets/license_en.txt",
      "category": "Utility"
    }
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "clean": "rimraf dist build",
    "server:dev": "nodemon server/index.js",
    "server:start": "NODE_ENV=production node server/index.js",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "preelectron:dist": "yarn build",
    "electron:dist": "electron-builder -mwl",
    "electron:pack": "electron-builder --dir",
    "preelectron:release": "yarn build",
    "electron:release": "electron-builder -mwl -p always",
    "predocker:build": "yarn build",
    "docker:build": "docker build -t qmk .",
    "docker:run": "docker run -it --rm -p 8000:80 --name qmk qmk",
    "docker:clean": "docker rm $(docker ps -q -f 'status=exited') && docker rmi $(docker images -q -f 'dangling=true')"
  },
  "dependencies": {
    "@craco/craco": "^3.2.3",
    "body-parser": "^1.18.3",
    "corser": "^2.0.1",
    "electron-first-run": "^2.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-updater": "^4.1.2",
    "express": "^4.16.4",
    "fix-path": "^2.1.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "shrink-ray-current": "^3.0.2"
  },
  "devDependencies": {
    "chroma-js": "^2.0.2",
    "concurrently": "^4.1.0",
    "d3": "^5.7.0",
    "electron": "^3.1.12",
    "electron-builder": "^20.44.4",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "react": "^16.7.0",
    "react-beautiful-dnd": "^10.0.3",
    "react-color": "^2.14.1",
    "react-dom": "^16.7.0",
    "react-s-alert": "^1.4.1",
    "react-scripts": "2.1.2",
    "react-textfit": "^1.1.0",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^0.84.0",
    "uuid": "^3.3.2",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
